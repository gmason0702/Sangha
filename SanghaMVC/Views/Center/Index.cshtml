@model IEnumerable<Sangha.Models.CenterModels.CenterListItem>

@{
    ViewBag.Title = "Index";

}

<h2>Center Directory</h2>

<p>
    @Html.ActionLink("Add New Center", "Create")
</p>
@using (Html.BeginForm("Index", "center", FormMethod.Get))
{
    <p>
        Search by Center Name: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter" />
    </p>}
<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.CenterId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.State)*@
            @Html.ActionLink("State", "Index", new { sortOrder = ViewBag.StateSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.AvgRating)*@
            @Html.ActionLink("Average Rating", "Index", new { sortOrder = ViewBag.RatingSort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.CenterId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @if (item.AvgRating != 0)
                {
                    @Html.DisplayFor(modelItem => item.AvgRating)
                }
            </td>
            <td>
                @Html.ActionLink("Rate", "Rate", new { id = item.CenterId }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.CenterId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CenterId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CenterId })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
