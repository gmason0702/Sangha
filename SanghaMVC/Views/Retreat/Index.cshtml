                @Html.DisplayNameFor(model => model.RetreatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetreatDate)
            </th>
            <th>
                @Html.ActionLink("Length of Retreat (days)", "Index", new { sortOrder = ViewBag.Length })

                @*@Html.DisplayNameFor(model => model.RetreatLength)*@
